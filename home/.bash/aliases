# DIRECTORIES
alias apps='cd /Applications'
alias desktop='cd ~/Desktop'
alias docs='cd ~/Documents'
alias work='cd ~/work'
alias katas='cd ~/Katas'
alias dotfiles='cd ~/.homesick/repos/anthonynavarre/dotfiles/home'

# MISC
alias ls='ls -G'
alias ll='ls -lAh'
alias lls='ls -lAhS'
alias reload='source ~/.bash_profile'
alias ..='cd ..'

# git ±±±
alias g='git status'
alias gco='git checkout $1'
alias ssh-add-git='ssh-add ~/.ssh/id_rsa_github'

# Ruby + Rails
alias be='bundle exec $1'
alias rdbm='rake db:migrate db:test:prepare'

# gems
alias gemi='gem install $1 --no-rdoc --no-ri'

